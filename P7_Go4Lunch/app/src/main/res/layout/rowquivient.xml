<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeRecyGrand"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/photoRecyGrand"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:civ_border_width="4dp"/>

    <TextView
        android:id="@+id/nomRecyGrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/photoRecyGrand"
        android:text="name" />

    <TextView
        android:id="@+id/iscomingRecyGrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/nomRecyGrand"
        android:text="@string/coming"/>


</RelativeLayout>
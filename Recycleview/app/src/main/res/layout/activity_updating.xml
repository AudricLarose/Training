<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f4f6"
    tools:context=".Updating">


    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Modification " />

    <EditText
        android:id="@+id/et_texteEncadre"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:background="@drawable/bgeditetext" />

    <Button
        android:id="@+id/btn_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_texteEncadre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/edite2"
        android:textColor="@android:color/white"
        android:text="Valider" />


</RelativeLayout>
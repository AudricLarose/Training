<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeRecyGrand"
    >
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/photoRecyGrand"
        android:layout_width="61dp"
        android:layout_height="61dp"

        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nomRecyGrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/photoRecyGrand"
        android:text="name" />

    <TextView
        android:id="@+id/iscomingRecyGrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/nomRecyGrand"
        android:text="is coming !" />


</RelativeLayout>